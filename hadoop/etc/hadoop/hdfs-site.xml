<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <!-- datanode property -->
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>/home/root/Hadoop/DataNode</value>
  </property>


  <!-- namenode property -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>/home/root/Hadoop/NameNode</value>
  </property>
  <property>
    <name>dfs.namenode.safemode.threshold-pct</name>
    <value>0</value>
  </property>
  <property> 
    <name>dfs.permissions.enabled</name> 
    <value>false</value> 
  </property>
  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>

  <property>
    <name>dfs.datanode.hostname</name>
    <value>0.0.0.0</value>
  </property>
</configuration>
